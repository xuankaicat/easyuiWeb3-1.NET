@model SaleEditViewModel

<form id="ddform">
    <input id="HdId" hidden asp-for="Id" />
    <div id="divU">
        <table cellpadding="0" cellspacing="1" border="0" style="width: 100%;" bgcolor="b5d6e6">
            <tr style="background-color: White; height: 32px;">
                <td style="width: 80px; padding-left: 5px">
                    <label asp-for="公司名称"></label>
                </td>
                <td style="padding: 5px">
                    <input id="name" asp-for="公司名称" class="easyui-validatebox" required validType="isNameInUse" style="border: 1px solid #8DB2E3; width: 200px; height: 20px" />
                </td>
            </tr>
            <tr style="background-color: White; height: 32px;">
                <td style="padding: 5px">
                    <label asp-for="销售人员"></label>
                </td>
                <td style="padding: 5px">
                    <input asp-for="销售人员" class="easyui-validatebox" required style="border: 1px solid #8DB2E3; width: 200px; height: 20px" />
                </td>
            </tr>
            <tr style="background-color: White; height: 32px;">
                <td style="padding: 5px">
                    <label asp-for="送货地址"></label>
                </td>
                <td style="padding: 5px">
                    <textarea cols="2" asp-for="送货地址" class="easyui-validatebox" required style="border: 1px solid #8DB2E3; width: 200px; height: 20px" ></textarea>
                </td>
            </tr>
        </table>
    </div>
    <div border="false" style="text-align: right; height: 30px; line-height: 30px;padding-top:7px">
        <button type="button" class="easyui-linkbutton" icon="icon-ok" onclick="editEnd()">确定</button>
        <a id="A4" class="easyui-linkbutton" onclick='$("#dd2").dialog("close");' icon="icon-cancel" href="javascript:void(0)">
            取消
        </a>
    </div>
</form>