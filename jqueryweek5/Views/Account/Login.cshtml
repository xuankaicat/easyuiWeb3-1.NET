@model LoginViewModel
@{
    ViewData["Title"] = "登录";
}

@section Links{
    <script src="~/EasyUI/jquery.min.js" type="text/javascript"></script>
    <script src="~/EasyUI/jquery.easyui.min.js" type="text/javascript"></script>
    <script src="~/EasyUI/locale/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <script src="~/lib/verify-code-main/js/verify-code.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <link href="~/EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/verify-code-main/css/verify-code.css" rel="stylesheet" type="text/css" />

    <style>

        body {
            display: flex;
            justify-content: center;
            background-image: linear-gradient(to left, #99ccff, #3399cc);
        }

        .a {
            background-color: #fff;
            width: 350px;
            height: 450px; /*500*/
            position: relative;
            display: flex;
            border-radius: 10px;
            justify-content: center;
            align-items: center;
            top: 100px;
        }

        .b {
            width: 300px;
            height: 450px;
            overflow: hidden;
        }

        .c {
            font: 900 40px '微软雅黑';
            margin: 60px 0;
            text-align: center;
            /* 设置字体间距 */
            letter-spacing: 5px;
        }

        .e {
            width: 100%;
            margin-bottom: 20px;
            outline: none;
            border: 0;
            padding: 10px;
            border-bottom: 2px solid rgb(60,60,70);
            font: 900 16px '微软雅黑';
        }

        .f {
            text-align: center;
            width: 100%;
            height: 48px;
            padding: 12px;
            font: 900 20px '微软雅黑';
            border-radius: 10px;
            background-image: linear-gradient(to left, #99ccff, #3399cc);
        }

        .g {
            /*margin: 33px;*/
        }
    </style>

    <script>
        $(function () {
            InitDialog();
        });
    </script>
}

<form id="loginform" enctype="multipart/form-data" asp-controller="account" asp-action="login" method="post">
    <di class="a">
        <div class="b">
            <p class="c">Login</p>
            <div class="d">
                <input asp-for="Name" class="e" placeholder="账号">
                <input asp-for="Password" class="e" placeholder="密码">
                <div style="padding-top:24px">
                    <button type="button" class="f" onclick="login()">登录</button>
                </div>
            </div>
            <div class="g">
                <div asp-validation-summary="All" style="color:red"></div>
                @*Forget the password?<a href="#">Retrieve</a>*@
            </div>
        </div>
    </di>

    <div id="dd2" style="padding: 0px">
        <div id="code-container" style="height: 200px;padding-left:5px"></div>
    </div>
</form>

@section Scripts{

    <script>

        function login() {
            $('#dd2').dialog('open');
        }

        function InitDialog() {
            $('#dd2').dialog({
                closed: true,
                title: '登录验证',
                width: 334,
                height: 242
            });
        }

        let verifyCode = $('#code-container').VerifyCode({
            images: [
                '../images/verify/1.png',
                '../images/verify/2.png',
                '../images/verify/3.png',
                '../images/verify/4.jpg',
                '../images/verify/5.jpg'
            ],
            ready() {
                console.log('ready');
            },
            success(time) {
                console.log('success', time);
                alert('耗时' + (time / 1000).toFixed(2) + '秒，超过了全球99.99的人！');
                $('#dd2').dialog('close');
                $('#loginform').submit();
                verifyCode.reset();
            },
            fail() {
                console.log('fail');
            }
        });
    </script>
}